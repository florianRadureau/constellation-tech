# Google Cloud Platform Configuration
GCP_PROJECT_ID=constellation-tech
GCP_REGION=europe-west1
GCS_BUCKET_NAME=constellation-tech-images
GOOGLE_APPLICATION_CREDENTIALS=../secrets/gcp-service-account.json

# Application Configuration
DAILY_QUOTA=100
ENVIRONMENT=development
LOG_LEVEL=INFO

# API Configuration
API_TITLE=Constellation Tech API
API_VERSION=1.0.0
API_DESCRIPTION=Generate beautiful constellation visualizations from CVs

# CORS Configuration (comma-separated origins)
CORS_ORIGINS=*

# Image Generation Settings
CANVAS_SIZE=1024
MIN_STAR_DISTANCE=120
RANDOM_NOISE=30
MAX_CONNECTIONS_PER_STAR=3

# Storage Settings
SIGNED_URL_EXPIRATION_DAYS=7
